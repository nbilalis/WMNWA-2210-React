{
  "env": {
    "es2021": true
  },
  "extends": ["airbnb-typescript-prettier", "plugin:react/jsx-runtime"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint", "react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
